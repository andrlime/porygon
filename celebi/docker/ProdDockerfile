FROM python:3.12.4-bookworm AS base

# Install poetry and dependencies
FROM base AS deps

RUN pip install poetry

WORKDIR /celebi

COPY config.yaml pyproject.toml poetry.lock* ./
RUN poetry install --without dev

# Run the actual Flask app using waitress
FROM deps AS flask
WORKDIR /celebi

COPY --from=deps /celebi/. .
COPY . .

EXPOSE 9000:9000
CMD ["poetry", "run", "waitress-serve", "--port=9000", "--call", "celebi.flask.factory:create_flask_app"]
